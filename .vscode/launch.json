  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API Key Management",
      "type": "go",
      "request": "launch",
      "program": "${workspaceFolder}/main.go",
      "env": {
        "PORT": "8080"
      },
      "args": []
    },
    {
      "name": "Debug Specific Unit Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/handlers/key-management-test.go",
      "env": {
        "PORT": "8080"
      },
      "args": [
        "-test.v",
        "-test.run",
        "TestAPIKeyFlow" // Name of the specific test function you want to run
      ]
    }
  ]
}
